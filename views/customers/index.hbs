<div class="book-index">
    <div class="one">
        <p style="font-weight: bolder; font-size: 20px; padding-top:6px;">Customers</p>
        <button class="btn2"><a style="text-decoration:none ; color: white;" href="customers/create">Create New</a></button>
    </div>
   
    <div class="book-table">
        <section class="row">
             <hr>
        <table class="table table-striped">
            <thead style="background-color: black; color:white;">
                <tr>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Gender</th>
                </tr>
            </thead>
            <tbody>
                {{#each customers}}
                <tr>
                    <th scope="row">{{this.firstName}}</th>
                    <td>{{this.lastName}}</td>
                    <td>{{this.gender}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </section>
    </div>
</div>